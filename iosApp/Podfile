# Uncomment the next line to define a global platform for your project
platform :ios, '15.0'

target 'NequixiOS' do
  use_frameworks!

  pod 'shared', :path => '../shared'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  pod 'Firebase/Messaging'

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
    
    # Fix para todos los targets _Privacy bundle error - deshabilitar CopySwiftLibs
    # Estos bundles no tienen ejecutables, por lo que CopySwiftLibs falla
    if target.name.end_with?('_Privacy')
      puts "  Corrigiendo target: #{target.name}"
      phases_to_remove = []
      target.build_phases.each do |phase|
        # Buscar y eliminar el build phase CopySwiftLibs
        if phase.is_a?(Xcodeproj::Project::Object::PBXCopyFilesBuildPhase)
          # CopySwiftLibs tiene dst_subfolder_spec == 16
          if phase.dst_subfolder_spec == 16
            puts "    Removiendo CopySwiftLibs de #{target.name}"
            phases_to_remove << phase
          end
        end
      end
      # Eliminar los phases despuÃ©s de iterar
      phases_to_remove.each { |phase| target.build_phases.delete(phase) }
    end
  end
  
  # Guardar los cambios en el proyecto
  installer.pods_project.save
end
