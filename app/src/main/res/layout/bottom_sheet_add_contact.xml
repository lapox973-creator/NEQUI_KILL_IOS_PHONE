<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="32dp">

        <!-- Handle bar -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFCCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agrega un nuevo contacto"
            android:textSize="24sp"
            android:textColor="#000000"
            android:fontFamily="@font/manrope_bold"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="24dp" />

        <!-- Campo Nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/manrope_medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/bg_edittext_rounded"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#80000000"
                android:hint=""
                android:inputType="textPersonName"
                android:fontFamily="@font/manrope_regular" />
        </LinearLayout>

        <!-- Campo Tipo de victima -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de victima"
                android:textSize="14sp"
                android:textColor="@color/nequi_pink"
                android:fontFamily="@font/manrope_medium"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/llVictimType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/bg_edittext_rounded"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvVictimType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nequi"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/manrope_regular" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="#666666" />
            </LinearLayout>
        </LinearLayout>

        <!-- Campo Número de teléfono (Nequi) -->
        <LinearLayout
            android:id="@+id/llPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de teléfono"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/manrope_medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/bg_edittext_rounded"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#80000000"
                android:hint=""
                android:inputType="phone"
                android:maxLength="10"
                android:fontFamily="@font/manrope_regular" />
        </LinearLayout>

        <!-- Campo Llave (Llaves) -->
        <LinearLayout
            android:id="@+id/llKey"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llave"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/manrope_medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/bg_edittext_rounded"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#80000000"
                android:hint="@ejemplo"
                android:inputType="text"
                android:fontFamily="@font/manrope_regular" />
        </LinearLayout>

        <!-- Campo Nombre de banco destino (Llaves) -->
        <LinearLayout
            android:id="@+id/llBankDestination"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de banco destino"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/manrope_medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etBankDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/bg_edittext_rounded"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#80000000"
                android:hint=""
                android:inputType="text"
                android:fontFamily="@font/manrope_regular" />
        </LinearLayout>

        <!-- Campo Número de cuenta (Bancolombia) -->
        <LinearLayout
            android:id="@+id/llAccountNumber"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de cuenta"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/manrope_medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/bg_edittext_rounded"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#80000000"
                android:hint="11 dígitos"
                android:inputType="number"
                android:maxLength="11"
                android:fontFamily="@font/manrope_regular" />
        </LinearLayout>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:text="Guardar"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_pink"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginHorizontal="24dp" />

    </LinearLayout>
</ScrollView>

