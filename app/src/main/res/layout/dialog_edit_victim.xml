<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="@color/zinit_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/zinit_background">

        <!-- Header con título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/dialog_header_gradient"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar víctima"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/manrope_bold" />

        </LinearLayout>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Campo Nombre -->
            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="14sp"
                    android:textColor="#80ffffff"
                    android:fontFamily="@font/manrope_medium"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/zinit_field_background"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textColorHint="#80ffffff"
                        android:background="@null"
                        android:hint="Nombre"
                        android:inputType="textPersonName"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- Campo Teléfono (Nequi) -->
            <LinearLayout
                android:id="@+id/llPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de teléfono"
                    android:textSize="14sp"
                    android:textColor="#80ffffff"
                    android:fontFamily="@font/manrope_medium"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/zinit_field_background"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textColorHint="#80ffffff"
                        android:background="@null"
                        android:hint="Teléfono"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- Campo Llave (Llaves) -->
            <LinearLayout
                android:id="@+id/llKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Llave"
                    android:textSize="14sp"
                    android:textColor="#80ffffff"
                    android:fontFamily="@font/manrope_medium"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/zinit_field_background"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/etKey"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textColorHint="#80ffffff"
                        android:background="@null"
                        android:hint="@ejemplo"
                        android:inputType="text"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- Campo Banco Destino (Llaves) -->
            <LinearLayout
                android:id="@+id/llBankDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de banco destino"
                    android:textSize="14sp"
                    android:textColor="#80ffffff"
                    android:fontFamily="@font/manrope_medium"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/zinit_field_background"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/etBankDestination"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textColorHint="#80ffffff"
                        android:background="@null"
                        android:hint="Banco destino"
                        android:inputType="text"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- Campo Número de Cuenta (Bancolombia) -->
            <LinearLayout
                android:id="@+id/llAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de cuenta"
                    android:textSize="14sp"
                    android:textColor="#80ffffff"
                    android:fontFamily="@font/manrope_medium"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/zinit_field_background"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/etAccountNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textColorHint="#80ffffff"
                        android:background="@null"
                        android:hint="11 dígitos"
                        android:inputType="number"
                        android:maxLength="11"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:text="Cancelar"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/manrope_bold"
                    android:backgroundTint="#ff4444"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp" />

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Actualizar"
                    android:textColor="#ff000000"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/manrope_bold"
                    android:backgroundTint="#ffeb3b"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

