<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7">

    <!-- Header con degradado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_header_gradient"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:tint="#FFFFFF"
                android:contentDescription="Atrás"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar movimiento"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:fontFamily="@font/manrope_bold"
                    android:letterSpacing="0.01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registra un nuevo movimiento de entrada"
                    android:textColor="#E0E0E0"
                    android:textSize="13sp"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- ScrollView principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="100dp">

            <!-- Título de sección -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de movimiento"
                android:textColor="#1C1C1E"
                android:textSize="18sp"
                android:fontFamily="@font/manrope_bold"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginBottom="16dp"/>

            <!-- Grid de opciones (2x2) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="32dp">

                <!-- Fila 1: Nequi y Bancolombia -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Card Nequi -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardNequi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:foreground="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/bg_circle_nequi"
                                android:layout_marginBottom="12dp"/>

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_nequi_n"
                                android:layout_gravity="center"
                                android:layout_marginTop="-44dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nequi"
                                android:textColor="#1C1C1E"
                                android:textSize="16sp"
                                android:fontFamily="@font/manrope_bold"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nequi a Nequi"
                                android:textColor="#8E8E93"
                                android:textSize="12sp"
                                android:fontFamily="@font/manrope_regular"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card Bancolombia -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBancolombia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:foreground="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/bg_circle_bancolombia"
                                android:layout_marginBottom="12dp"/>

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_bank"
                                android:tint="#FFFFFF"
                                android:layout_gravity="center"
                                android:layout_marginTop="-44dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bancolombia"
                                android:textColor="#1C1C1E"
                                android:textSize="16sp"
                                android:fontFamily="@font/manrope_bold"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transferencia bancaria"
                                android:textColor="#8E8E93"
                                android:textSize="12sp"
                                android:fontFamily="@font/manrope_regular"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Fila 2: QR y Llaves -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card QR -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardQR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:foreground="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/bg_circle_qr"
                                android:layout_marginBottom="12dp"/>

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_qr_code"
                                android:layout_gravity="center"
                                android:layout_marginTop="-44dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="QR"
                                android:textColor="#1C1C1E"
                                android:textSize="16sp"
                                android:fontFamily="@font/manrope_bold"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pago con QR"
                                android:textColor="#8E8E93"
                                android:textSize="12sp"
                                android:fontFamily="@font/manrope_regular"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card Llaves -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardLlaves"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:foreground="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/bg_circle_llaves"
                                android:layout_marginBottom="12dp"/>

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/key"
                                android:layout_gravity="center"
                                android:layout_marginTop="-44dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Llaves"
                                android:textColor="#1C1C1E"
                                android:textSize="16sp"
                                android:fontFamily="@font/manrope_bold"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Envío por llaves"
                                android:textColor="#8E8E93"
                                android:textSize="12sp"
                                android:fontFamily="@font/manrope_regular"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Indicador de selección -->
            <LinearLayout
                android:id="@+id/llSelectedIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E5EA"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_selected_indicator"
                    android:padding="16dp"
                    app:cardCornerRadius="12dp">

                    <ImageView
                        android:id="@+id/ivSelectedIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvSelectedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#1C1C1E"
                            android:textSize="16sp"
                            android:fontFamily="@font/manrope_bold"/>

                        <TextView
                            android:id="@+id/tvSelectedSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#8E8E93"
                            android:textSize="13sp"
                            android:fontFamily="@font/manrope_regular"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botón flotante de acción -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="Continuar"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/nequi_pink"
        app:icon="@drawable/ic_arrow_forward"
        app:iconTint="#FFFFFF"
        android:fontFamily="@font/manrope_bold"
        android:letterSpacing="0.01"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
