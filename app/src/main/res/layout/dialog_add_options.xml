<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Qué deseas agregar?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/manrope_bold"
        android:layout_marginBottom="24dp"/>

    <!-- Opción 1: Agregar Víctima -->
    <LinearLayout
        android:id="@+id/optionAddUser"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?selectableItemBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_person_add"
            android:tint="#E91E63"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar Víctima"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/manrope_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agrega un nuevo número de teléfono"
                android:textSize="13sp"
                android:textColor="#999999"
                android:fontFamily="@font/manrope_regular"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:tint="#CCCCCC"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <!-- Opción 2: Agregar Llave -->
    <LinearLayout
        android:id="@+id/optionAddKey"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?selectableItemBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_qr_code"
            android:tint="#E91E63"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar Llaves"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/manrope_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agrega tus llaves de acceso"
                android:textSize="13sp"
                android:textColor="#999999"
                android:fontFamily="@font/manrope_regular"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:tint="#CCCCCC"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <!-- Opción 3: Agregar Movimiento de Entrada -->
    <LinearLayout
        android:id="@+id/optionAddMovement"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?selectableItemBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add_circle"
            android:tint="#E91E63"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar Entrada"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/manrope_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registra un movimiento de entrada"
                android:textSize="13sp"
                android:textColor="#999999"
                android:fontFamily="@font/manrope_regular"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:tint="#CCCCCC"
            android:scaleType="centerInside"/>
    </LinearLayout>

</LinearLayout>
