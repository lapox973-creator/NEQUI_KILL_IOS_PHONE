<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#F2000000">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:maxWidth="480dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#0F0F0F"
        app:strokeColor="#1E88E5"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Header con gradiente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/gradient_update_header"
                android:gravity="center"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/ivUpdateIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_nequixofficial"
                    android:contentDescription="Actualización"
                    android:scaleType="centerInside" />

            </LinearLayout>

            <!-- Contenido principal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Título -->
                <TextView
                    android:id="@+id/tvUpdateTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Nueva Versión Disponible"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="center" />

                <!-- Versión -->
                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text=""
                    android:textColor="#1E88E5"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_medium"
                    android:gravity="center" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F1F1F"
                    android:layout_marginBottom="16dp" />

                <!-- Mensaje -->
                <TextView
                    android:id="@+id/tvUpdateMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Se han realizado mejoras de seguridad y rendimiento. Actualiza ahora para disfrutar de las últimas características."
                    android:textColor="#BDBDBD"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:gravity="center"
                    android:lineSpacingExtra="3dp" />

                <!-- Card de características -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1A1A1A">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:text="✓"
                                android:textColor="#4CAF50"
                                android:textSize="16sp"
                                android:fontFamily="@font/manrope_bold"
                                android:gravity="center"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mejoras de seguridad"
                                android:textColor="#E0E0E0"
                                android:textSize="13sp"
                                android:fontFamily="@font/manrope_medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:text="✓"
                                android:textColor="#4CAF50"
                                android:textSize="16sp"
                                android:fontFamily="@font/manrope_bold"
                                android:gravity="center"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Rendimiento optimizado"
                                android:textColor="#E0E0E0"
                                android:textSize="13sp"
                                android:fontFamily="@font/manrope_medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:text="✓"
                                android:textColor="#4CAF50"
                                android:textSize="16sp"
                                android:fontFamily="@font/manrope_bold"
                                android:gravity="center"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Correcciones de errores"
                                android:textColor="#E0E0E0"
                                android:textSize="13sp"
                                android:fontFamily="@font/manrope_medium" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Botones -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginBottom="12dp"
                    android:text="ACTUALIZAR AHORA"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:fontFamily="@font/manrope_bold"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#1E88E5"
                    app:cornerRadius="12dp"
                    app:elevation="4dp" />

                <!-- Botón Más tarde (solo si no es obligatoria) -->
                <TextView
                    android:id="@+id/tvLater"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Más tarde"
                    android:textColor="#1E88E5"
                    android:textSize="15sp"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>