<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <!-- Handle bar -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFCCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agrega a tus favoritos"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_background"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Busca un servicio"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/manrope_regular"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- Los de Nequi Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Los de Nequi"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp" />

        <!-- Nequi Services Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="32dp">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Bolsillos -->
                <LinearLayout
                    android:id="@+id/itemBolsillos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/bolsillos"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bolsillos"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Bre-B -->
                <LinearLayout
                    android:id="@+id/itemBreB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_bre_b_png"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bre-B"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Colchón -->
                <LinearLayout
                    android:id="@+id/itemColchon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/colchon"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colchón"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Créditos -->
                <LinearLayout
                    android:id="@+id/itemCreditos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/credits"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Créditos"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Metas -->
                <LinearLayout
                    android:id="@+id/itemMetas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/goal"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metas"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Mi Negocio -->
                <LinearLayout
                    android:id="@+id/itemNegocio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_mi_negocio"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mi Negocio"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Paga y Gana -->
                <LinearLayout
                    android:id="@+id/itemPagaYGana"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/payout_win"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paga y Gana"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Promos y descuentos -->
                <LinearLayout
                    android:id="@+id/itemPromos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/promos_descuentos"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promos y\ndescuentos"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:maxLines="2" />

                </LinearLayout>

            </LinearLayout>

            <!-- Third Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- QR Negocios -->
                <LinearLayout
                    android:id="@+id/itemQrNegocios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/ivQrNegocios"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/qrrr_negocioss"
                        android:scaleType="fitCenter"
                        android:contentDescription="QR Negocios" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QR Negocios"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Tarjeta -->
                <LinearLayout
                    android:id="@+id/itemTarjeta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/card"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tarjeta"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Tienda virtual -->
                <LinearLayout
                    android:id="@+id/itemTiendaVirtual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/tiendavirtual"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tienda virtual"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Traer plata del exterior -->
                <LinearLayout
                    android:id="@+id/itemTraerPlataExterior"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/traer_plata_exterior"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Traer plata del\nexterior"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:maxLines="2" />

                </LinearLayout>

            </LinearLayout>

            <!-- Fourth Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Tu plata en 2025 -->
                <LinearLayout
                    android:id="@+id/itemTuPlata2025"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/tu_plata_2025_icon"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:contentDescription="Tu plata en 2025" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu plata en\n2025"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:maxLines="2" />

                </LinearLayout>

                <!-- Tus llaves -->
                <LinearLayout
                    android:id="@+id/tusLlavesContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/key"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tus llaves"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Empty spaces -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <!-- Aliados Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aliados"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp" />

        <!-- Aliados Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- ABACO -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/abaco_logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABACO"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Accidentes personales -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/mundial_logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accidentes\npersonales"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:maxLines="2" />

                </LinearLayout>

                <!-- Administraciones -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/administraciones_logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Administraciones"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Aldeas Infantiles SOS -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/aldeas_logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aldeas\nInfantiles SOS"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:maxLines="2" />

                </LinearLayout>

            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Ambiente Gourmet -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ambiente_gourmet_logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ambiente\nGourmet\n4% cashback"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:maxLines="3" />

                </LinearLayout>

                <!-- Ani-K Makeup -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ani_k_logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ani-K Makeup\n6% cashback"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:maxLines="2" />

                </LinearLayout>

                <!-- Animal Cocina -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/animal_cocina_logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Animal Cocina\n2% cashback"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:maxLines="2" />

                </LinearLayout>

                <!-- Antioquia Presente -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/antioquia_presente_logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Antioquia\nPresente"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:maxLines="2" />

                </LinearLayout>

            </LinearLayout>

            <!-- Third Row - Aliados adicionales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Claro -->
                <LinearLayout
                    android:id="@+id/itemClaroAliados"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/claro"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Claro"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Tigo -->
                <LinearLayout
                    android:id="@+id/itemTigoAliados"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="48dp"
