<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header con botón atrás y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:tint="#000000"
            android:contentDescription="Atrás"
            android:background="?selectableItemBackgroundBorderless"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Victimas"
            android:textColor="#000000"
            android:textSize="28sp"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Botones de selección: Nequi, Llaves, Bancolombia -->
    <LinearLayout
        android:id="@+id/selectionButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical">

        <android.widget.Button
            android:id="@+id/btnNequi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nequi"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_pink_confirmation"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/manrope_medium"
            android:paddingVertical="12dp"
            android:layout_marginEnd="8dp"/>

        <android.widget.Button
            android:id="@+id/btnLlaves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Llaves"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_dark"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/manrope_medium"
            android:paddingVertical="12dp"
            android:layout_marginEnd="8dp"/>

        <android.widget.Button
            android:id="@+id/btnBancolombia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bancolombia"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_dark"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/manrope_medium"
            android:paddingVertical="12dp"/>
    </LinearLayout>

    <!-- ScrollView con lista de usuarios -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:id="@+id/usersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <!-- Botones flotantes -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp">

        <!-- Botón para agregar movimientos de entrada -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddMovement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="80dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/nequi_pink"
            app:tint="@android:color/white"
            android:contentDescription="Agregar movimientos de entrada"/>

        <!-- Botón flotante para agregar usuario -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
        android:src="@drawable/ic_person_add"
        app:backgroundTint="@color/nequi_pink"
        app:tint="@android:color/white"
        android:contentDescription="Agregar usuario"/>
    </FrameLayout>

</LinearLayout>
