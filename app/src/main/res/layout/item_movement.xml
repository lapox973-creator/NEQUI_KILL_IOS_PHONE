<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="4.5dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="4.5dp"
    android:layout_marginHorizontal="16dp"
    android:outlineSpotShadowColor="@color/color_200020"
    android:outlineAmbientShadowColor="@color/nequi_pink"
    app:cardBackgroundColor="#ffffffff"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="13dp"
        android:paddingTop="18dp"
        android:paddingEnd="13dp"
        android:paddingBottom="18dp"
        android:paddingHorizontal="13dp"
        android:paddingVertical="18dp">

        <ImageView
            android:id="@+id/imageViewMovementIcon"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/arrow_down_movement"
            android:contentDescription="Icono de movimiento"
            android:rotation="180.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#ffe6335a" />

        <TextView
            android:id="@+id/textViewMovementName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/nequi_purple"
            android:textAllCaps="true"
            android:fontFamily="@font/manrope_medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@id/textViewMovementAmount"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imageViewMovementIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewMovementDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ff200020"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/manrope_regular"
            app:layout_constraintEnd_toStartOf="@id/textViewMovementAmount"
            app:layout_constraintStart_toStartOf="@id/textViewMovementName"
            app:layout_constraintTop_toBottomOf="@id/textViewMovementName" />

        <TextView
            android:id="@+id/textViewMovementSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ff200020"
            android:fontFamily="@font/manrope_regular"
            android:text="PAGO EN QR BRE-B"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/textViewMovementAmount"
            app:layout_constraintStart_toStartOf="@id/textViewMovementName"
            app:layout_constraintTop_toBottomOf="@id/textViewMovementName" />

        <TextView
            android:id="@+id/textViewMovementAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#ffe6335a"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>